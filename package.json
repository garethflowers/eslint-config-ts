{
	"author": {
		"name": "Gareth Flowers",
		"url": "https://garethflowers.dev"
	},
	"bugs": {
		"url": "https://github.com/garethflowers/eslint-config-ts/issues"
	},
	"dependencies": {
		"eslint-plugin-import": "2.31.0",
		"eslint-plugin-jsdoc": "60.8.3",
		"typescript-eslint": "8.46.0"
	},
	"description": "Opinionated strict eslint configuration for TypeScript and JavaScript projects.",
	"devDependencies": {
		"mocha": "11.7.4",
		"typescript": "5.9.3"
	},
	"engines": {
		"node": ">=16",
		"npm": ">=8"
	},
	"eslintConfig": {
		"extends": [
			"./src/index.js"
		]
	},
	"funding": {
		"type": "paypal",
		"url": "https://paypal.me/garethflowers"
	},
	"homepage": "https://github.com/garethflowers/eslint-config-ts",
	"license": "MIT",
	"main": "src/index.js",
	"mocha": {
		"check-leaks": true,
		"colors": true,
		"exit": true,
		"full-trace": true,
		"inline-diffs": true,
		"recursive": true,
		"slow": 40,
		"spec": "src/**/*.spec.js"
	},
	"name": "@garethflowers/eslint-config-ts",
	"peerDependencies": {
		"eslint": ">= 9",
		"typescript": ">= 5.8"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/garethflowers/eslint-config-ts.git"
	},
	"scripts": {
		"build": "",
		"lint": "eslint .",
		"postversion": "git push --follow-tags",
		"preversion": "npm test",
		"start": "npm test",
		"test": "eslint --debug"
	},
	"version": "0.3.0"
}
